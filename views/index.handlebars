<!--The main container-->
<div class="container">
    <div class="burger-image"></div>
    <h1 style="color:red">Eat A Burger!</h1>
    <div class = "row">
        <div class="col-8">
            <ul>
            {{#each burgers}}
            {{#unless this.devoured}}
                <li>
                    <p>{{this.id}}. {{this.burger_name}} <button class="btn btn-success ml-5 mb-1 Devoured"
                            data-id="{{this.id}}">Devour it!</button></p>
                </li>
            {{/unless}}
            {{/each}}
            </ul>
        </div>
        <div class="col-4">
            <ul>
                {{#each burgers}}
                {{#if this.devoured}}
                <li>
                    <button disabled class="btn btn-secondary devouredBurger">{{this.id}}. {{this.burger_name}}
                    </button>
                </li>
                {{/if}}
                {{/each}}
            </ul>
        </div>
    </div>
    <form id="burger-submit">
        <div class="form-group">
            <textarea type="text" class="form-control" id="freshBurgers"></textarea>
            <button type="submit" id="submitBtn" class= "btn btn-primary mt-2">Submit!</button><br>
            <small type="text" class="form-group text-muted mt-3">Enter a burger you wants to eat and click Submit</small>
        </div>
    </form>
</div>